<h1><%= t('.title') %></h1>



<% if @property.errors.any? %>
	<ul>
		<% @property.errors.each do |error| %>
			<li> <%= error %> </li>
		<% end %>
	</ul>
<% end %>

<%= form_with(model: @property) do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :description%>
		<%= f.text_field :description %>
	</div>
	<div>
		<%= f.label :rooms, 'Quartos' %>
		<%= f.text_field :rooms %>
	</div>
	<div>
		<%= f.label :bathrooms, 'Banheiros' %>
		<%= f.text_field :bathrooms %>
	</div>
	<div>
		<%= f.label :daily_rate, 'Diária' %>
		<%= f.number_field :daily_rate %>
	</div>
	<div>
		<%= f.label :pets, 'Aceita Pets' %>
		<%= f.check_box :pets%>
	</div>
	<div>
		<%= f.label :parking_slot, 'Vaga de Estacionamento' %>
		<%= f.check_box :parking_slot %>
	</div>
	<div>
		<%= f.label :property_type_id, 'Tipo' %>
		<%= f.collection_select :property_type_id, PropertyType.all, :id, :name %>
	</div>
	<div>
		<%= f.label :property_location_id, 'Região' %>
		<%= f.collection_select :property_location_id, PropertyLocation.all, :id, :name %>
	</div>
	<%= f.submit 'Enviar' %>
<% end %>
