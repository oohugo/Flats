
<h1><%= @property.title %></h1>
<p><%= @property.description %></p>
<dl>
	<dt>Quartos:</dt>
	<dd><%= @property.rooms %></dd>
	<dt>Banheiros:</dt>
	<dd><%= @property.bathrooms %></dd>
	<dt>Aceita Pets:</dt>
	<dd><%= @property.pets ? 'Sim' : 'Não' %> </dd>
	<dt>Estacionamento:</dt>
	<dd><%= @property.parking_slot ? 'Sim' : 'Não' %></dd>
	<dt>Diária:</dt>
	<dd><%= number_to_currency(@property.daily_rate) %></dd>
	<dt>Tipo:</dt>
	<dd><%= @property.property_type.name %></dd>
	<dt>Região:</dt>
	<dd><%= @property.property_location.name %></dd>
	<dt>Imóvel de: </dt>
	<dd><%= @property.property_owner.email %></dd>
</dl>

<%= link_to("Voltar", root_path) %>
